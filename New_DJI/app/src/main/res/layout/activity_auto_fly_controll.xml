<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ndtw36.new_dji.AutoFlyControllActivity">

    <dji.sdk.widget.DjiGLSurfaceView
        android:id="@+id/AutoFly_surfaceDJI"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned"
        android:ems="10"
        android:id="@+id/etYaw"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="-500 &lt;&lt;Yaw&lt;&lt; 500"
        android:layout_marginLeft="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned"
        android:ems="10"
        android:id="@+id/etFowBack"
        android:layout_below="@+id/etYaw"
        android:layout_alignStart="@+id/etYaw"
        android:hint="-1000 &lt;&lt;Back/Fow&lt;&lt; 1000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned"
        android:ems="10"
        android:id="@+id/etLeftRight"
        android:layout_below="@+id/etFowBack"
        android:layout_alignStart="@+id/etFowBack"
        android:hint="-1000 &lt;&lt;left/right&lt;&lt; 1000" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btn_start"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/etLeftRight" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TakeOff"
        android:id="@+id/takeOFF"
        android:layout_above="@+id/btn_start"
        android:layout_alignStart="@+id/btn_start" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/btnStop"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn_start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="State:"
        android:id="@+id/tvState"
        android:textColor="#fa0e0e"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/viewTimer"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textColor="#fa0808"
        android:layout_alignTop="@+id/btnStop"
        android:layout_alignEnd="@+id/btnStop"
        android:textSize="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Landing"
        android:id="@+id/btn_land"
        android:layout_below="@+id/takeOFF"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/etDegree"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/etLeftRight"
        android:hint="-180 ~ 180"
        android:layout_alignEnd="@+id/viewTimer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:id="@+id/btnDegree"
        android:layout_alignBottom="@+id/etDegree"
        android:layout_toEndOf="@+id/etDegree" />

</RelativeLayout>
